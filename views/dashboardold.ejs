<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Painel de Agendamentos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
  <style>
    body {
      background: linear-gradient(135deg, #f8f9fa 70%, #e0eaff 100%);
      min-height: 100vh;
      font-size: 18px;
    }
    .main-box {
      max-width: 1200px;
      margin: 2rem auto 2rem auto;
      padding: 2rem 1rem;
    }
    .card {
      border-radius: 18px;
      box-shadow: 0 2px 14px rgba(50,80,200,0.07);
      padding: 2rem 1.5rem;
    }
    .form-control, .form-select, .btn {
      min-height: 48px;
      font-size: 1rem;
      border-radius: 12px;
    }
    .btn { padding: 0.5rem 1.2rem; font-weight: 500; }
    .btn-primary, .btn-success {
      background: linear-gradient(90deg, #3366ff 70%, #5be3f5 100%);
      border: none;
      font-weight: 600;
    }
    .btn-success { background: linear-gradient(90deg, #2ecc40 80%, #33ffe7 100%); color: #222;}
    .table-responsive { border-radius: 12px; }
    .table { border-radius: 10px !important; background: #fafdff; }
    .table th, .table td { vertical-align: middle; }
    .badge {
      font-size: 1rem;
      border-radius: 8px;
    }
    /* Mobile Cards */
    @media (max-width: 991px) {
      .desktop-table { display: none !important; }
      .mobile-cards { display: block !important; }
      .main-box { padding: 0; }
    }
    @media (min-width: 992px) {
      .desktop-table { display: block !important; }
      .mobile-cards { display: none !important; }
    }
    .mobile-cards .card { margin-bottom: 16px; border: 1.5px solid #e5e5e5; border-radius: 14px;}
    .mobile-cards .card-body { padding: 18px 14px; }
    .mobile-cards .badge { font-size: 1rem; margin-bottom: 4px; border-radius: 8px;}
    .mobile-cards .btn { font-size: 1rem; border-radius: 10px; }
    @media (max-width: 575px) {
      .form-label, .form-control, .form-select, .btn, th, td { font-size: 15px !important;}
      h2, h4 { font-size: 20px !important;}
      .card { border-radius: 10px; padding: 1.2rem 0.6rem;}
      .main-box { padding: 0 2px !important;}
    }
  </style>
</head>
<body>
  <div class="main-box">
    <!-- Top Navigation -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
      <h2 class="mb-0"><i class="bi bi-calendar-check"></i> Painel de Agendamentos</h2>
      <div class="d-flex align-items-center gap-2 flex-wrap">
        <a href="/clientes" class="btn btn-outline-primary">
          <i class="bi bi-people"></i> Clientes
        </a>
        <a href="/servicos" class="btn btn-outline-secondary">
          <i class="bi bi-gear"></i> Serviços
        </a>
        <a href="/funcionarios" class="btn btn-outline-info">
          <i class="bi bi-person-badge"></i> Funcionários
        </a>
        <a href="/relatorio" class="btn btn-outline-dark">
          <i class="bi bi-bar-chart"></i> Relatório
        </a>
        <span class="me-3">Olá, <b><%= user %></b></span>
        <a href="/logout" class="btn btn-outline-danger btn-sm">Sair</a>
      </div>
    </div>

    <!-- Formulário de Novo Agendamento -->
    <div class="card mb-4">
      <h4 class="mb-3"><i class="bi bi-plus-circle"></i> Novo Agendamento</h4>
      <form method="post" action="/agendar" onsubmit="return validarFormulario();">
        <div class="row g-3">
          <div class="col-12 col-md-6 position-relative">
            <label for="cliente" class="form-label">Cliente</label>
            <input type="text" class="form-control" id="cliente" name="cliente" autocomplete="off" required>
            <div id="sugestoes-clientes" class="list-group position-absolute w-100" style="z-index:99"></div>
          </div>
          <div class="col-12 col-md-6">
            <label for="telefone" class="form-label">Telefone</label>
            <input type="text" class="form-control" id="telefone" name="telefone" required>
          </div>
          <div class="col-12 col-md-6">
            <label for="cpf" class="form-label">CPF</label>
            <input type="text" class="form-control" id="cpf" name="cpf" maxlength="14" required>
          </div>
          <div class="col-12 col-md-6">
            <label for="servico" class="form-label">Serviço</label>
            <select class="form-select" id="servico" name="servico" required>
              <option value="">Selecione o serviço</option>
              <% servicos.forEach(s => { %>
                <option value="<%= s.nome %>"><%= s.nome %> - R$ <%= s.preco.toFixed(2) %></option>
              <% }); %>
            </select>
          </div>
          <div class="col-12 col-md-6">
            <label for="datahora" class="form-label">Data e Hora</label>
            <input type="datetime-local" class="form-control" id="datahora" name="datahora" required>
          </div>
          <div class="col-12 col-md-6">
            <label for="funcionaria" class="form-label">Funcionário(a)</label>
            <select class="form-select" id="funcionaria" name="funcionaria" required>
              <option value="">Selecione</option>
              <% funcionarios.forEach(f => { %>
                <option value="<%= f.nome %>"><%= f.nome %> <%= f.cargo ? '- ' + f.cargo : '' %></option>
              <% }) %>
            </select>
          </div>
          <div class="col-12 col-md-6 align-self-end">
            <button type="submit" class="btn btn-success w-100 mt-1">
              <i class="bi bi-check2-circle"></i> Agendar
            </button>
          </div>
        </div>
      </form>
    </div>

    <!-- Filtros -->
    <div class="mb-3 d-flex flex-wrap gap-2">
      <a href="/dashboard?filtro=dia" class="btn btn-outline-primary <% if (filtro === 'dia') { %>active<% } %>">Hoje</a>
      <a href="/dashboard?filtro=semana" class="btn btn-outline-primary <% if (filtro === 'semana') { %>active<% } %>">Semana</a>
      <a href="/dashboard?filtro=mes" class="btn btn-outline-primary <% if (filtro === 'mes') { %>active<% } %>">Mês</a>
      <a href="/dashboard?filtro=todos" class="btn btn-outline-primary <% if (filtro === 'todos' || !filtro) { %>active<% } %>">Todos</a>
    </div>

    <!-- Tabela Desktop -->
    <div class="card desktop-table mb-4">
      <h4 class="mb-3">Todos os Agendamentos</h4>
      <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Cliente</th>
              <th>Telefone</th>
              <th>CPF</th>
              <th>Serviço</th>
              <th>Data/Hora</th>
              <th>Funcionária</th>
              <th>Status</th>
              <th>Ação</th>
            </tr>
          </thead>
          <tbody>
          <% if (agendamentos.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center">Nenhum agendamento cadastrado.</td>
            </tr>
          <% } else { %>
            <% agendamentos.forEach(a => { %>
              <tr>
                <td><%= a.cliente %></td>
                <td><%= a.telefone %></td>
                <td><%= a.cpf || "" %></td>
                <td><%= a.servico %></td>
                <td><%= a.datahora.replace("T", " ") %></td>
                <td>
                  <% if (a.funcionaria === "marcones") { %> Sogra (Marcones)
                  <% } else if (a.funcionaria === "analaura") { %> Ana Laura
                  <% } else if (a.funcionaria === "luiza") { %> Luiza
                  <% } else { %> <%= a.funcionaria %> <% } %>
                </td>
                <td>
                  <form method="post" action="/atualizar-status/<%= a.id %>" style="display:inline;">
                    <select name="status" class="form-select form-select-sm d-inline" style="width:auto;display:inline-block" onchange="this.form.submit()">
                      <option value="pendente" <%= a.status === "pendente" ? "selected" : "" %>>Pendente</option>
                      <option value="compareceu" <%= a.status === "compareceu" ? "selected" : "" %>>Compareceu</option>
                      <option value="nao_compareceu" <%= a.status === "nao_compareceu" ? "selected" : "" %>>Não compareceu</option>
                    </select>
                  </form>
                </td>
                <td>
                  <form method="post" action="/apagar/<%= a.id %>" onsubmit="return confirm('Tem certeza que deseja apagar este agendamento?')">
                    <button type="submit" class="btn btn-sm btn-danger">Apagar</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Cards Mobile -->
    <div class="mobile-cards mb-4" style="display:none;">
      <h4 class="mb-3">Todos os Agendamentos</h4>
      <% if (agendamentos.length === 0) { %>
        <div class="alert alert-light text-center">Nenhum agendamento cadastrado.</div>
      <% } else { %>
        <% agendamentos.forEach(a => { %>
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="fw-bold" style="font-size: 1.1em;"><%= a.cliente %></span>
                <span class="badge 
                  <%= a.status === 'compareceu' ? 'bg-success' : 
                      a.status === 'nao_compareceu' ? 'bg-danger' : 
                      'bg-warning text-dark' %>">
                  <%= a.status.charAt(0).toUpperCase() + a.status.slice(1).replace('_',' ') %>
                </span>
              </div>
              <div class="mb-1">
                <i class="bi bi-telephone"></i> <b>Telefone:</b> <%= a.telefone %>
              </div>
              <div class="mb-1"><b>CPF:</b> <%= a.cpf || "" %></div>
              <div class="mb-1"><b>Serviço:</b> <%= a.servico %></div>
              <div class="mb-1"><b>Data/Hora:</b> <%= a.datahora.replace("T", " ") %></div>
              <div class="mb-1"><b>Funcionária:</b>
                <% if (a.funcionaria === "marcones") { %> Sogra (Marcones)
                <% } else if (a.funcionaria === "analaura") { %> Ana Laura
                <% } else if (a.funcionaria === "luiza") { %> Luiza
                <% } else { %> <%= a.funcionaria %> <% } %>
              </div>
              <form method="post" action="/atualizar-status/<%= a.id %>" class="mb-2">
                <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                  <option value="pendente" <%= a.status === "pendente" ? "selected" : "" %>>Pendente</option>
                  <option value="compareceu" <%= a.status === "compareceu" ? "selected" : "" %>>Compareceu</option>
                  <option value="nao_compareceu" <%= a.status === "nao_compareceu" ? "selected" : "" %>>Não compareceu</option>
                </select>
              </form>
              <form method="post" action="/apagar/<%= a.id %>" onsubmit="return confirm('Tem certeza que deseja apagar este agendamento?')">
                <button type="submit" class="btn btn-danger w-100">Apagar</button>
              </form>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <!-- Máscaras e validação -->
  <script>
    $(document).ready(function() {
      $('#telefone').mask('(00) 00000-0000');
      $('#cpf').mask('000.000.000-00', {reverse: true});
      // AUTOCOMPLETE DE CLIENTE
      let timer;
      $('#cliente').on('input', function() {
        clearTimeout(timer);
        let nome = $(this).val();
        if (nome.length < 2) {
          $('#sugestoes-clientes').hide();
          return;
        }
        timer = setTimeout(() => {
          $.get('/clientes/autocomplete', { q: nome }, function(clientes) {
            if (!clientes.length) {
              $('#sugestoes-clientes').hide();
              return;
            }
            let html = clientes.map(c => `
              <a href="#" class="list-group-item list-group-item-action"
                 data-telefone="${c.telefone}"
                 data-cpf="${c.cpf}"
                 data-nome="${c.nome}">
                ${c.nome} <small>(${c.telefone})</small>
              </a>
            `).join('');
            $('#sugestoes-clientes').html(html).show();
          });
        }, 200);
      });
      // Ao clicar na sugestão
      $('#sugestoes-clientes').on('click', '.list-group-item', function(e) {
        e.preventDefault();
        $('#cliente').val($(this).data('nome'));
        $('#telefone').val($(this).data('telefone'));
        $('#cpf').val($(this).data('cpf'));
        $('#sugestoes-clientes').hide();
      });
      // Esconde ao clicar fora
      $(document).on('click', function(e) {
        if (!$(e.target).closest('#sugestoes-clientes, #cliente').length) {
          $('#sugestoes-clientes').hide();
        }
      });
    });

    function validarCPF(cpf) {
      cpf = cpf.replace(/[^\d]+/g,'');
      if (cpf.length !== 11 || /^(\d)\1+$/.test(cpf)) return false;
      let soma = 0, resto;
      for (let i = 1; i <= 9; i++) soma += parseInt(cpf.substring(i-1, i)) * (11 - i);
      resto = (soma * 10) % 11;
      if (resto === 10 || resto === 11) resto = 0;
      if (resto !== parseInt(cpf.substring(9, 10))) return false;
      soma = 0;
      for (let i = 1; i <= 10; i++) soma += parseInt(cpf.substring(i-1, i)) * (12 - i);
      resto = (soma * 10) % 11;
      if (resto === 10 || resto === 11) resto = 0;
      if (resto !== parseInt(cpf.substring(10, 11))) return false;
      return true;
    }
    function validarFormulario() {
      let cpf = document.getElementById('cpf').value;
      if (!validarCPF(cpf)) {
        alert('CPF inválido!');
        document.getElementById('cpf').focus();
        return false;
      }
      let dataSelecionada = document.getElementById('datahora').value;
      if (!dataSelecionada) {
        alert('Selecione uma data e hora!');
        document.getElementById('datahora').focus();
        return false;
      }
      let dataAgendamento = new Date(dataSelecionada);
      let agora = new Date();
      agora.setSeconds(0,0);
      if (dataAgendamento < agora) {
        // Pergunta ao usuário se quer continuar mesmo assim
        let resposta = confirm('A data/hora selecionada já passou. Deseja agendar mesmo assim para registrar o atendimento?');
        if (!resposta) {
          document.getElementById('datahora').focus();
          return false;
        }
      }
      return true;
    }
  </script>
</body>
</html>

