<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Consultar Horário</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">
  <div class="card p-4" style="min-width:350px;">
    <h2 class="mb-3 text-center">Consultar Meu Horário</h2>
    <form method="post" action="/meuhorario">
      <div class="mb-3">
        <label for="cpf" class="form-label">Digite seu CPF:</label>
        <input type="text" class="form-control" id="cpf" name="cpf" maxlength="14" value="<%= cpf || '' %>" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Ver meus horários</button>
    </form>
    <% if (error) { %>
      <div class="mt-2 text-danger text-center"><%= error %></div>
    <% } %>
    <% if (horarios) { %>
      <div class="mt-4">
        <h5 class="text-center">Seus horários:</h5>
        <ul class="list-group">
          <% horarios.forEach(h => { %>
            <li class="list-group-item">
              <b>Serviço:</b> <%= h.servico %><br>
              <b>Data/Hora:</b> <%= h.datahora.replace("T", " ") %><br>
              <b>Funcionária:</b>
              <% if (h.funcionaria === "marcones") { %>
                Sogra (Marcones)
              <% } else if (h.funcionaria === "analaura") { %>
                Ana Laura
              <% } else if (h.funcionaria === "luiza") { %>
                Luiza
              <% } else { %>
                <%= h.funcionaria %>
              <% } %>
            </li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <div class="mt-4 text-center">
      <a href="/login">Área do salão</a>
    </div>
  </div>
</body>
</html>
