<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Funcionários</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h2>Funcionários do Salão</h2>
    <a href="/dashboard" class="btn btn-secondary mb-3">Voltar ao Painel</a>

    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="post" action="/funcionarios" class="mb-4 row g-2">
      <div class="col-12 col-md-6">
        <input type="text" class="form-control" name="nome" placeholder="Nome do Funcionário" required>
      </div>
      <div class="col-12 col-md-4">
        <input type="text" class="form-control" name="cargo" placeholder="Cargo/Função">
      </div>
      <div class="col-12 col-md-2">
        <button type="submit" class="btn btn-success w-100">Adicionar</button>
      </div>
    </form>

    <div class="row mb-3">
      <div class="col-md-6">
        <input type="text" id="filtroNome" class="form-control" placeholder="Buscar por nome ou cargo...">
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered align-middle" id="tabelaFuncionarios">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Cargo</th>
            <th>Status</th>
            <th style="width:150px;">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (funcionarios.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center">Nenhum funcionário cadastrado.</td>
            </tr>
          <% } else { %>
            <% funcionarios.forEach(f => { %>
              <tr>
                <td><%= f.id %></td>
                <td><%= f.nome %></td>
                <td><%= f.cargo %></td>
                <td>
                  <form method="post" action="/funcionarios/status/<%= f.id %>" class="d-inline">
                    <input type="hidden" name="status" value="<%= f.status === 'Ativo' ? 'Inativo' : 'Ativo' %>">
                    <button type="submit" class="btn btn-sm <%= f.status === 'Ativo' ? 'btn-success' : 'btn-secondary' %>">
                      <%= f.status %>
                    </button>
                  </form>
                </td>
                <td>
                  <!-- Editar (abre modal) -->
                  <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalEdit<%= f.id %>">
                    <i class="bi bi-pencil"></i>
                  </button>
                  <!-- Remover -->
                  <form method="post" action="/funcionarios/remover/<%= f.id %>" class="d-inline" onsubmit="return confirm('Remover funcionário?');">
                    <button class="btn btn-outline-danger btn-sm" type="submit"><i class="bi bi-trash"></i></button>
                  </form>
                </td>
              </tr>
              <!-- Modal de edição -->
              <div class="modal fade" id="modalEdit<%= f.id %>" tabindex="-1">
                <div class="modal-dialog">
                  <form class="modal-content" method="post" action="/funcionarios/editar/<%= f.id %>">
                    <div class="modal-header">
                      <h5 class="modal-title">Editar Funcionário</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                      <div class="mb-3">
                        <label class="form-label">Nome</label>
                        <input type="text" class="form-control" name="nome" value="<%= f.nome %>" required>
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Cargo</label>
                        <input type="text" class="form-control" name="cargo" value="<%= f.cargo %>">
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button type="submit" class="btn btn-primary">Salvar</button>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                  </form>
                </div>
              </div>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- Filtro JS -->
  <script>
    document.getElementById('filtroNome').addEventListener('input', function() {
      const filtro = this.value.toLowerCase();
      document.querySelectorAll('#tabelaFuncionarios tbody tr').forEach(row => {
        const texto = row.innerText.toLowerCase();
        row.style.display = texto.includes(filtro) ? '' : 'none';
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
