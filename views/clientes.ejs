<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Consulta de Clientes</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    @media (max-width: 767.98px) {
      .desktop-table { display: none !important; }
      .mobile-cards { display: block !important; }
    }
    @media (min-width: 768px) {
      .desktop-table { display: block !important; }
      .mobile-cards { display: none !important; }
    }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h2 class="mb-3">Consulta de Clientes</h2>
    <a href="/dashboard" class="btn btn-secondary mb-3">Voltar ao Painel</a>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- TABELA DESKTOP -->
    <div class="desktop-table">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>CPF</th>
          </tr>
        </thead>
        <tbody>
          <% if (clientes.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center">Nenhum cliente encontrado.</td>
            </tr>
          <% } else { %>
            <% clientes.forEach(c => { %>
              <tr>
                <td><%= c.id %></td>
                <td><%= c.nome %></td>
                <td><%= c.telefone %></td>
                <td><%= c.cpf %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- CARDS MOBILE -->
    <div class="mobile-cards" style="display:none;">
      <% if (clientes.length === 0) { %>
        <div class="alert alert-light text-center">Nenhum cliente encontrado.</div>
      <% } else { %>
        <div class="row g-3">
          <% clientes.forEach(c => { %>
            <div class="col-12">
              <div class="card">
                <div class="card-body p-3">
                  <h5 class="card-title mb-2"><%= c.nome %></h5>
                  <p class="mb-1"><b>ID:</b> <%= c.id %></p>
                  <p class="mb-1"><b>Telefone:</b> <%= c.telefone %></p>
                  <p class="mb-0"><b>CPF:</b> <%= c.cpf %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
